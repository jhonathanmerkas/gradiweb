@font-face {
	font-family: 'FuturaPT-Light';
	src: url('../fonts/FuturaPT-Light.eot?#iefix') format('embedded-opentype'),  
		url('../fonts/FuturaPT-Light.otf')  format('opentype'),
		url('../fonts/FuturaPT-Light.woff') format('woff'),
		url('../fonts/FuturaPT-Light.ttf')  format('truetype'),
		url('../fonts/FuturaPT-Light.svg#FuturaPT-Light') format('svg');
	font-weight: normal;
	font-style: normal;
}
@font-face {
    font-family: 'Futura PT Book';
    src: url('../fonts/FuturaPT-Book.eot');
    src: url('../fonts/FuturaPT-Book.eot?#iefix') format('embedded-opentype'),
        url('../fonts/FuturaPT-Book.woff2') format('woff2'),
        url('../fonts/FuturaPT-Book.woff') format('woff'),
        url('../fonts/FuturaPT-Book.ttf') format('truetype'),
        url('../fonts/FuturaPT-Book.svg#FuturaPT-Book') format('svg');
    font-weight: normal;
    font-style: normal;
}
@font-face {
	font-family: 'FuturaPT-Bold';
	src: url('../fonts/FuturaPT-Bold.eot?#iefix') format('embedded-opentype'),
		url('../fonts/FuturaPT-Bold.otf')  format('opentype'),
		url('../fonts/FuturaPT-Bold.woff') format('woff'),
		url('../fonts/FuturaPT-Bold.ttf')  format('truetype'),
		url('../fonts/FuturaPT-Bold.svg#FuturaPT-Bold') format('svg');
	font-weight: normal;
	font-style: normal;
}

html{
	body{
		background-color: blanco
		font-family: fontRegular
		height: 100%
		b{
			font-family: fontBold
		}
        .gradiweb{
            background-color: grisfondo
			min-height: 100vh
			.cabezera{
				padding-top: 20px
				padding-bottom: 30px
				.logo{
					height 40px
					width: auto
					margin-right: -20px
				}
			}
			.caja{
				background-color: blanco
				border-radius: 25px
				padding: 40px
				margin-bottom: 60px
				.banner{
					width: 100%
					position: relative
					img{
						width 100%
						border-radius 25px
					}
					.contaner-clima-banner{
						position absolute
						top 50%
						margin-top: -100px
						left -40px
						display: flex
						flex-direction: row
						justify-content: flex-start
						align-items: flex-start
						.clima-banner{
							margin-right 40px
							border-radius 0px 25px 25px 0px
							.clima-banner-icono{
								width 80px
								height 80px
								background-color: morado
								border-radius: 0px 25px 25px 10px
								display: flex
								justify-content: center
								align-items: center
								flex-direction: column
								position: relative
								z-index: 3
								svg{
									color blanco
									font-size: 35px
									margin-bottom: 5px
								}
								p{
									color blanco
									text-align: center
									font-size: 10px
									margin-bottom: 0
								}
								&:before{
									content ''
									position absolute
									top  -8px
									left 0px
									border-top solid 8px transparent
									border-bottom solid 8px transparent
									border-left solid 8px morado

								}
							}
							.clima-banner-info{
								width 80px
								height 80px
								background-color: purpura
								border-radius: 0px 0px 25px 0px
								display: flex
								justify-content: center
								align-items: center
								flex-direction: column
								margin-top: -25px
								position: relative
								padding-top: 15px
								z-index: 1
								h3{
									color blanco
									font-family: fontBold
									margin-bottom: 0px
								}
								&:before{
									content ''
									position absolute
									bottom  -8px
									left 0px
									border-top solid 8px transparent
									border-bottom solid 8px transparent
									border-left solid 8px purpura
								}
							}
						}
						.clima-banner-ciudad{
							display: flex
							align-items: center
							justify-content: flex-start
							h3{
								color purpura
								font-family: fontRegular
								font-weight: 700
								font-size: 20px
								margin-bottom: 0px
								padding-left: 10px
								text-shadow: 0px 0px 2px rgba(0,0,0,0.3)
							}
							svg{
								color purpura
								font-size: 20px
								text-shadow: 0px 0px 2px rgba(0,0,0,0.5)
							}
						}
					}
				}
				.caja-body{
					padding-top 30px
					.titulo-seccion{
						font-size 20px
						font-family fontRegular
						margin-bottom 20px
						b{
							font-family fontBold
						}
					}
					.caja-pq{
						background-color: blanco
						border-radius: 10px
						border 1px solid rgba(0,0,0,0.1)
						display flex
						flex-direction row
						justify-content space-between
						align-items center
						height 50px
						margin-bottom 10px
						.caja-pq-grados{
							height 50px
							border-radius 10px
							background purpura
							align-items: center
							justify-content: center
							display flex
							padding 10px
							p{
								color blanco
								font-family fontRegular
								font-weight 700
								margin-bottom 0
								font-size 12px
							}
						}
						.caja-pq-icon{
							height 50px
							width 40px
							display flex
							align-items center
							justify-content center
							svg{
								color: purpura
								font-size 20px
							}
						}
						.caja-pq-info{
							text-align left
							flex 1
							display flex
							flex-direction: column
							align-items flex-start
							justify-content center
							h5{
								margin-bottom 0
								font-size 16px
								line-height 16px
								font-family fontBold
							}
							p{
								font-size 12px
								margin-bottom 0
							}
						}
					}
					.caja-paris{
						border-radius 20px
						overflow hidden
						height 170px
						width 100%
						position relative
						img{
							width 100%
							height auto
						}
						.caja-paris-ciudad{
							position absolute
							top 20px
							left 20px
							z-index 3
							display flex
							svg{
								color blanco
								font-size 14px
								text-shadow: 0px 0px 2px rgba(0,0,0,0.5)
							}
							h3{
								color blanco
								font-size 14px
								text-shadow: 0px 0px 2px rgba(0,0,0,0.2)
								padding-left 5px
								margin-bottom 0px
								width 80px
								font-family fontRegular
								font-weight 700
							}
						}
						&.caja-medellin{
							height 60px
							margin-bottom 20px
							.caja-paris-ciudad{
								top 10px
							}
						}
						&.caja-barranquilla{
							height 90px
							.caja-paris-ciudad{
								top 10px
							}
						}
					}
					.content-user{
						display flex
						flex-direction: row
						align-items center
						justify-content space-between
						margin-bottom 25px
						svg{
							font-size 12px
						}
						p{
							font-size 12px
							margin-bottom 0px
							flex 1
							padding-left 5px
						}
						ul{
							margin 0px
							width 100px
							padding 0px
							li{
								width 20px
								height 20px
								background-color purpura
								float left
								margin-left 5px
								border-radius 3px
								overflow hidden
								display flex
								align-items center
								justify-content center
								img{
									width 20px
									height 20px
									float left
								}
								p{
									color blanco
									font-size 10px
									margin-bottom 0px
								}
							}
						}
					}
					.contenedor-izquierdo{
						margin-top: -100px
						.caja-mediana{
							border-radius 20px
							margin-right: 30px
							background-color: blanco
							margin-bottom: 10px
							.caja-mediana-body{
								display flex
								flex-direction: row
								align-items center
								justify-content space-between
								.caja-mediana-icono{
									width: 70px
									height 70px
									background-color: gris
									display flex
									justify-content center
									align-items center
									border-radius: 20px
									svg{
										font-size: 30px
										color purpura
									}
								}
								.caja-mediana-info{
									display flex
									flex-direction: row
									justify-content: flex-start
									padding: 0px 15px
									align-items: center
									flex: 1
									h2{
										font-size: 40px
										font-family: fontRegular
										font-weight: 700
										margin-bottom: 0px
									}
									.divisor{
										height: 30px
										width: 1px
										background-color: gris
										margin-left: 10px
										margin-right: 10px
									}
									h4{
										font-size: 16px
										margin-bottom: 0px
										font-family: fontRegular
										font-weight: 700
										small{
											display: block
										}
									}
								}
							}
							.caja-mediana-footer{
								display: flex
								flex-direction: row
								justify-content: space-between
								align-items: center
								p{
									display: flex
									flex: 1
									text-align: center
									margin-bottom: 0px
									font-size: 12px
									color negroOpaco
									padding-left: 10px
									padding-right: 10px
									padding-top: 5px
									padding-bottom: 5px
									display: block
								}
							}
						}
					}
					
				}
			}
        }
    }
}

